{
    "repo": {
        "name": "github:",
        "base_branch_name": "<BASE BRANCH>",
        "full_github_name": "<GITHUB REPO>"
    },
    "runner": {
        "name": "github",
        "run_workflow": "autotransform.run.yml",
        "update_workflow": "autotransform.update.yml"
    },
    "steps": [
        {
            "params": {
                "condition": {
                    "name": "change_state",
                    "comparison": "eq",
                    "state": "approved"
                },
                "action_type": "merge",
                "continue_if_passed": false
            },
            "type": "conditional"
        },
        {
            "params": {
                "condition": {
                    "name": "change_state",
                    "comparison": "eq",
                    "state": "changes_requested"
                },
                "action_type": "abandon",
                "continue_if_passed": false
            },
            "type": "conditional"
        }
    ]
}