{
    "repo": {
        "name": "github",
        "base_branch": "master",
        "full_github_name": "nathro/AutoTransform"
    },
    "runner": {
        "name": "github",
        "run_workflow": "autotransform.run.yml",
        "update_workflow": "autotransform.update.yml"
    },
    "steps": [
        {
            "name": "conditional",
            "actions": [
                {
                    "name": "merge"
                }
            ],
            "condition": {
                "name": "change_state",
                "comparison": "equal",
                "value": "approved"
            },
            "continue_if_passed": false
        },
        {
            "name": "conditional",
            "actions": [
                {
                    "name": "abandon"
                }
            ],
            "condition": {
                "name": "change_state",
                "comparison": "equal",
                "value": "changes_requested"
            },
            "continue_if_passed": false
        },
        {
            "name": "conditional",
            "actions": [
                {
                    "name": "update"
                }
            ],
            "condition": {
                "name": "updated_ago",
                "comparison": "greater_than_or_equal",
                "value": 259200
            },
            "continue_if_passed": false
        }
    ]
}