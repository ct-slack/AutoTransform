{
    "input": {
        "name": "git_grep",
        "pattern": "@black_format"
    },
    "filters": [
        {
            "name": "regex",
            "pattern": ".*\\.py$"
        }
    ],
    "batcher": {
        "name": "single",
        "title": "Format all python files",
        "metadata": {
            "body": "Apply Black formatting to all python files with @black_format"
        }
    },
    "transformer": {
        "params": {
            "script": "black",
            "args": [
                "-l",
                "100",
                "<<KEY>>"
            ],
            "timeout": 360,
            "per_item": true
        },
        "type": "script"
    },
    "validators": [
        {
            "params": {
                "script": "mypy",
                "args": [
                    "autotransform",
                    "tests"
                ],
                "failure_level": 2
            },
            "type": "script"
        },
        {
            "params": {
                "script": "pytest",
                "args": [
                    "-W",
                    "ignore::DeprecationWarning",
                    "tests/"
                ],
                "failure_level": 2
            },
            "type": "script"
        }
    ],
    "commands": [],
    "config": {
        "name": "Black Format",
        "allowed_validation_level": 1,
        "owners": [
            "@nathro"
        ]
    },
    "repo": {
        "name": "github:",
        "base_branch_name": "master",
        "full_github_name": "nathro/AutoTransform"
    }
}