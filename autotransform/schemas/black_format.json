{
    "input": {
        "name": "git_grep",
        "pattern": "@black_format"
    },
    "filters": [
        {
            "name": "regex",
            "pattern": ".*\\.py$"
        }
    ],
    "batcher": {
        "name": "single",
        "title": "Format all python files",
        "metadata": {
            "body": "Apply Black formatting to all python files with @black_format"
        }
    },
    "transformer": {
        "name": "script",
        "script": "black",
        "args": [
            "-l",
            "100",
            "<<KEY>>"
        ],
        "timeout": 360,
        "per_item": true
    },
    "validators": [
        {
            "name": "script",
            "script": "mypy",
            "args": [
                "autotransform",
                "tests"
            ],
            "failure_level": 2
        },
        {
            "name": "script",
            "script": "pytest",
            "args": [
                "-W",
                "ignore::DeprecationWarning",
                "tests/"
            ],
            "failure_level": 2
        }
    ],
    "commands": [],
    "config": {
        "schema_name": "Black Format",
        "allowed_validation_level": 1,
        "owners": [
            "@nathro"
        ]
    },
    "repo": {
        "name": "github:",
        "base_branch_name": "master",
        "full_github_name": "nathro/AutoTransform"
    }
}