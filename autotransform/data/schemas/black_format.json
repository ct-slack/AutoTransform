{
    "input": {
        "params": {
            "pattern": "@black_format"
        },
        "type": "git_grep"
    },
    "filters": [
        {
            "inverted": false,
            "params": {
                "pattern": ".*\\.py$"
            },
            "type": "regex"
        }
    ],
    "batcher": {
        "params": {
            "metadata": {
                "title": "Black Format",
                "body": "Apply Black formatting to all python files with @black_format"
            }
        },
        "type": "single"
    },
    "transformer": {
        "params": {
            "script": "black",
            "args": [
                "-l",
                "100",
                "<<KEY>>"
            ],
            "timeout": 360,
            "per_item": true
        },
        "type": "script"
    },
    "validators": [],
    "commands": [],
    "config": {
        "allowed_validation_level": 0
    }
}