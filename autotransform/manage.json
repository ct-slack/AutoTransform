{
    "repo": {
        "name": "github:",
        "base_branch_name": "master",
        "full_github_name": "nathro/AutoTransform"
    },
    "runner": {
        "name": "github",
        "run_workflow": "autotransform.run.yml",
        "update_workflow": "autotransform.update.yml"
    },
    "steps": [
        {
            "name": "conditional",
            "action": "merge",
            "condition": {
                "name": "change_state",
                "comparison": "eq",
                "state": "approved"
            },
            "continue_if_passed": false
        },
        {
            "name": "conditional",
            "action": "abandon",
            "condition": {
                "name": "change_state",
                "comparison": "eq",
                "state": "changes_requested"
            },
            "continue_if_passed": false
        },
        {
            "name": "conditional",
            "action": "update",
            "condition": {
                "params": {
                    "comparison": "gte",
                    "time": 259200
                },
                "type": "updated_ago"
            },
            "continue_if_passed": false
        }
    ]
}